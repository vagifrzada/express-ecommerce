<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head") %> 
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include("../partials/navigation") %> 
    <main>
        <div class="grid">
            <% if (products.length > 0) { %>
                <% for (const product of products) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.name %></h1>
                        </header>
                        <div class="card__image">
                            <img src="/uploads/<%= product.image %>" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %> </h2>
                            <p class="product__description">
                                <%= product.description %> 
                            </p>
                        </div>
                        <div class="card__actions">
                            <a href="/admin/products/<%= product._id %>/edit" class="btn">Edit</a>
                            <form action="/admin/products/delete" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" value="<%= product._id %>" name="productId">
                                <button class="btn" type="submit" onclick="confirm('Are u sure ?')">Delete</button>
                            </form>
                        </div>
                    </article>
                <% } %>
            <% } else { %>
                <h1>No products found :(</h1>
            <% } %>
        </div>
    </main>
</body>

</html>